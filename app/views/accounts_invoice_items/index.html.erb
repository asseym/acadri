<h1>Listing Accounts Invoice Items</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Units</th>
      <th>Unit cost</th>
      <th>Subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts_invoice_items.each do |accounts_invoice_item| %>
      <tr>
        <td><%= accounts_invoice_item.description %></td>
        <td><%= accounts_invoice_item.units %></td>
        <td><%= accounts_invoice_item.unit_cost %></td>
        <td><%= accounts_invoice_item.subtotal %></td>
        <td><%= link_to 'Show', accounts_invoice_item %></td>
        <td><%= link_to 'Edit', edit_accounts_invoice_item_path(accounts_invoice_item) %></td>
        <td><%= link_to 'Destroy', accounts_invoice_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

