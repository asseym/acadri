<%= form_for @program, :html => { :class => "form-horizontal program" } do |f| %>
        <div class="form-body">
            <% if ["new", "create"].include?(action_name)%>
            <%= render partial: 'stepnav', object: @steps = @steps_nav %>
            <div class="tab-content">
            <% end %>
            <% if @program.errors.any? %>
            <div id="error_expl" class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:
                    </h3>
                </div>
                <div class="panel-body">
                    <ul>
                        <% @program.errors.full_messages.each do |msg| %>
                        <li>
                            <%= msg %>
                        </li><% end %>
                    </ul>
                </div>
            </div>
            <% end %>
            <div class="tab-pane active" id="tab1">
                <h3 class="block">Provide basic details</h3>
            <div class="form-group">
                <%= f.label :name, :class => 'col-md-3 control-label' %>
                <div class="col-md-9">
                    <%= f.text_field :name, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :category_id, :class => 'col-md-3 control-label' %>
                <div class="col-md-3">
                    <%= f.select :category_id, 
                                options_from_collection_for_select(Category.all, :id, :name, :category_id), {}, { :class => 'form-control' } %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :description, :class => 'col-md-3 control-label' %>
                <div class="col-md-9">
                    <%= f.text_area :description, :class => 'wysihtml5' %>
                </div>
            </div>
        </div>
        <% if ["new", "create"].include?(action_name) %>
        <div class="tab-pane" id="tab2">
            <h3 class="block">Provide dates for the program</h3>
            <%= render partial: 'newdates_form', object: @f = f %>
        </div>
        
        <div class="tab-pane" id="tab3">
            <h3 class="block">Provide venues for the program</h3>
            <%= render partial: 'newvenues_form', object: @f = f %>
        </div>
        
        <% else %>
        <%= render partial: 'editdates_form', object: @f = f %>
        <% end %>             
            <!-- BEGIN FORM ACTIONS -->
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <!--<%= f.submit nil, :class => 'btn green', width: '20em' %>-->
                        <%= link_to t('.Create', :default => t("helpers.links.create")), '#', 
                                        :onclick => "$(this).closest('form').submit()", 
                                        :class => 'btn green' %><%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                                        programs_path, :class => 'btn default' %>
                    </div>
                </div>
            </div><!-- END FORM ACTIONS -->
            <% end %>
        </div>
<% if ["new", "create"].include?(action_name)%>
</div>
<% end %>