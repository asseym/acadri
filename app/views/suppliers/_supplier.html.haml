%td= object.name
%td= object.shop_name
%td= object.contact_numbers
%td= object.address
%td= object.town
%td= object.country
%td{:id => "supplies_#{object.id}"}
  %a{'data-toggle' => "modal", 'data-target' => "#modal_#{object.id}"} Supplys?
  .modal.fade{tabindex:-1, id: "modal_#{object.id}", role: 'dialog', 'aria-labelledby' => "ptsLabel", 'aria-hidden' => true}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{type: "button", 'data-dismiss' => "modal"} &times;
          %h3.modal-title Supplies
        .modal-body
          %p
            = list_of_supplies(object)
        .modal-footer
          %button.btn.btn-default{type: "button", 'data-dismiss' => "modal"} Close
%td.actions{width:"120px;"}= smart_listing_item_actions [{name: :edit, url: edit_supplier_path(object)},
{name: :destroy, url: supplier_path(object), confirmation: "Are you sure you want to delete this item?"}]