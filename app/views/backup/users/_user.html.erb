<li>
  <%= gravator_for user, s: 50 %>
  <%= link_to user.name, users_path(user) %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", users_path(user), method: :delete,
                                  data: { confirm: "This action can not be UN-DONE, are you sure you want to delete this user?" } %>
  <% end %>
</li>
