<ul class="nav nav-pills nav-justified steps">
    <% @steps.each.with_index do |nav, n| %>
    <li <%= n == 0 ? 'class="active"'.html_safe : '' %>>
        <a href="#tab<%= n+1 %>" data-toggle="tab" class="step" aria-expanded="true">
            <span class="number"><%= n+1 %></span>
            <span class="desc"><i class="fa fa-check"></i><%= nav %></span>
        </a>
      </li>
    <% end %>
</ul>

<div id="bar" class="progress progress-striped" role="progressbar">
	<div class="progress-bar progress-bar-success" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
</div>