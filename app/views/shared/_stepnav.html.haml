%ul.nav.nav-pills.nav-justified.steps
  - @steps.each.with_index do |nav, n|
    %li{:class => ("active" unless n != 0)}
      %a.step{:href => "#tab#{n+1}", 'data-toggle' => "tab", 'aria-expanded' => "true"}
        %span.number= n+1
        %span.desc
          %i.fa.fa-check
          = nav
#bar.progress.progress-striped{:role =>"progressbar"}
  .progress-bar.progress-bar-success{'aria-valuenow' => "0", 'aria-valuemin' => "0", 'aria-valuemax' => "100", :style => "width: 0%;"}