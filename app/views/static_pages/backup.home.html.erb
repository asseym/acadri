<% provide(:title, "Sign In") %>

<!-- BEGIN SIDEBAR TOGGLER BUTTON -->
<div class="menu-toggler sidebar-toggler">
</div>
<!-- END SIDEBAR TOGGLER BUTTON -->
<!-- BEGIN LOGO -->
<div class="logo">
	<%= image_tag("logo-default.png") %>
	</a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
	<!-- BEGIN LOGIN FORM -->
    <%= form_for(:session, url: login_path, class: 'login-form') do |f| %>
		<h3 class="form-title">Sign In</h3>
  	      <% flash.each do |message_type, message| %>
  	  	    <div class="alert alert-<%= message_type %>">
    			<button class="close" data-close="alert"></button>
    			<span>
                <%= message %></span></div>
  	      <% end %>
		<div class="form-group">
			<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			<%= f.label :email, class: 'control-label visible-ie8 visible-ie9' %>
			<%= f.email_field :email, class: 'form-control form-control-solid placeholder-no-fix', placeholder: 'Email Address' %>
		</div>
		<div class="form-group">
			<%= f.label :password, class: 'control-label visible-ie8 visible-ie9'  %>
			<%= f.password_field :password, class: 'form-control form-control-solid placeholder-no-fix', placeholder: 'Password' %>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-success uppercase">Login</button>
      	  <%= f.label :remember_me, class: 'rememberme check' do %>
      	  	<%= f.check_box :remember_me %>
      		<span>Remember me</span>
      	  <% end %>
			<a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>
		</div>
		<div class="create-account">
			<p>&nbsp;
				<!--<a href="javascript:;" id="register-btn" class="uppercase">Create an account</a>-->
			</p>
		</div>
	 <% end %>
	<!-- END LOGIN FORM -->
	<!-- BEGIN FORGOT PASSWORD FORM -->
	<form class="forget-form" action="#" method="post" novalidate="novalidate">
		<h3>Forget Password ?</h3>
		<p>
			 Enter your e-mail address below to reset your password.
		</p>
		<div class="form-group">
			<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email">
		</div>
		<div class="form-actions">
			<button type="button" id="back-btn" class="btn btn-default">Back</button>
			<button type="submit" class="btn btn-success uppercase pull-right">Submit</button>
		</div>
	</form>
	<!-- END FORGOT PASSWORD FORM -->
</div>
