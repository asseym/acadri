<p id="notice"><%= notice %></p>

<h1>Listing User Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Notification</th>
      <th>User</th>
      <th>Resolved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_notifications.each do |user_notification| %>
      <tr>
        <td><%= user_notification.notification %></td>
        <td><%= user_notification.user %></td>
        <td><%= user_notification.resolved %></td>
        <td><%= link_to 'Show', user_notification %></td>
        <td><%= link_to 'Edit', edit_user_notification_path(user_notification) %></td>
        <td><%= link_to 'Destroy', user_notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

