- unless flash.empty?
  - flash.each do |message_type, message|
    -#- message_type = 'info' if message_type == 'notice'
    %div{ :class => "alert alert-#{message_type} alert-dismissible fade in", :role => "alert" }
      %button.close{ 'data-dismiss' => "alert", 'aria-label' => "Close" }
        %span{'aria-hidden' => "true"} &times;
      %strong= message

-#= flash_messages