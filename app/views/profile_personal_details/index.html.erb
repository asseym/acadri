<p id="notice"><%= notice %></p>

<h1>Listing Profile Personal Details</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Other names</th>
      <th>Religion</th>
      <th>Sex</th>
      <th>Marital status</th>
      <th>Birthday</th>
      <th>Nationality</th>
      <th>Languages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_personal_details.each do |profile_personal_detail| %>
      <tr>
        <td><%= profile_personal_detail.first_name %></td>
        <td><%= profile_personal_detail.other_names %></td>
        <td><%= profile_personal_detail.religion %></td>
        <td><%= profile_personal_detail.sex %></td>
        <td><%= profile_personal_detail.marital_status %></td>
        <td><%= profile_personal_detail.birthday %></td>
        <td><%= profile_personal_detail.nationality %></td>
        <td><%= profile_personal_detail.languages %></td>
        <td><%= link_to 'Show', profile_personal_detail %></td>
        <td><%= link_to 'Edit', edit_profile_personal_detail_path(profile_personal_detail) %></td>
        <td><%= link_to 'Destroy', profile_personal_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

